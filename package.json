{
  "name": "bolg-components",
  "license": "MIT",
  "module": "dist/index.es.js",
  "main": "dist/index.umd.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "test": "jest src",
    "test:watch": "jest src --watch",
    "serve": "sirv public --dev",
    "prepublishOnly": "npm run build",
    "format": "prettier --write {**/*,*}.{js,scss}"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@testing-library/jest-dom": "^5.1.1",
    "autoprefixer": "^9.7.4",
    "babel-jest": "^25.1.0",
    "husky": "^4.0.6",
    "jest": "^25.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "rollup": "^1.11.0",
    "sass": "^1.25.0",
    "sirv-cli": "^0.4.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Joe-noh/bolg-components"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{**/*,*}.{js,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
