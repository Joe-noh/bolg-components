{
  "name": "bolg-components",
  "version": "0.0.4",
  "license": "MIT",
  "module": "dist/index.es.js",
  "main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "test": "web-test-runner",
    "pretest": "npm run build",
    "serve": "live-server preview --mount=/dist:./dist",
    "preview": "concurrently npm:serve npm:watch",
    "prepublishOnly": "npm run build",
    "lint-staged": "lint-staged",
    "format": "prettier --write './**/*.{ts,js,mjs}'",
    "format:check": "prettier --check './**/*.{ts,js,mjs}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "lit": "^2.0.0-rc.3"
  },
  "devDependencies": {
    "@compodoc/live-server": "^1.2.2",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/mocha": "^9.0.0",
    "@web/dev-server-esbuild": "^0.2.14",
    "@web/test-runner": "^0.13.17",
    "concurrently": "^6.2.1",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "rollup": "^2.56.3",
    "ts-lit-plugin": "^1.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Joe-noh/bolg-components"
  },
  "files": [
    "pacakge.json",
    "dist/*",
    "README.md",
    "LICENSE"
  ],
  "lint-staged": {
    "**/*.{ts,js,mjs}": "prettier --write"
  }
}
