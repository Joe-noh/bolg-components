{
  "name": "bolg-components",
  "license": "MIT",
  "module": "dist/index.es.js",
  "main": "dist/index.umd.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "test": "jest src",
    "test:watch": "jest src --watch",
    "serve": "sirv public --dev",
    "prepublishOnly": "npm run build",
    "format": "prettier --write {**/*,*}.{js,scss}"
  },
  "dependencies": {
    "lit": "^2.0.0-rc.3"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.0.0",
    "husky": "^4.0.6",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "rollup": "^1.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Joe-noh/bolg-components"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{**/*,*}.{js,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
